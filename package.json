{
	"name": "gitpaper",
	"description": "ðŸ“° The first ever generator of non-boring and actually detailed release notes",
	"version": "0.0.0",
	"license": "MIT",
	"author": "Okinea Dev <hi@okinea.dev> (https://github.com/okineadev)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/okineadev/gitpaper.git"
	},
	"funding": "https://github.com/okineadev/gitpaper?sponsor=1",
	"keywords": [
		"changelog",
		"release notes",
		"github"
	],
	"files": [
		"dist/"
	],
	"bin": {
		"gitpaper": "./dist/cli/gitpaper.mjs"
	},
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"lint:tsc": "tsc --noEmit -p tsconfig.node.json",
		"lint:biome": "biome check",
		"lint:spell": "cspell --gitignore .",
		"lint": "bun run lint:tsc && bun run lint:biome && bun run lint:spell",
		"format": "biome format --write",
		"test": "bun test",
		"preversion": "bun run format && git add .",
		"build": "bunup",
		"dev": "bunup --watch",
		"prepare": "husky"
	},
	"dependencies": {
		"commander": "^14.0.0",
		"handlebars": "^4.7.8",
		"scule": "^1.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@types/node": "^24.0.3",
		"bun-types": "^1.2.16",
		"bunup": "0.8.64",
		"cspell": "^9.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "^5.8.3"
	}
}
